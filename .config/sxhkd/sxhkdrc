#
# wm independent hotkeys
#

# terminal
super + Return
	alacritty

# launcher
super + d
	rofi -show drun -font "SFNS Display 18"

# reload sxhkd 
super + shift + r
	pkill -USR1 -x sxhkd

# screenshot
Print
	scrot -q 100

#
# bspwm hotkeys
#

# quit bspwm
super + shift + e
	bspc quit

# close and kill
super + x
	bspc node -{c,k}

# alternate tiled and monocle layout
super + space
	bspc desktop -l next

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# altering windows
#

# expand the tiled space in the given direction
super + alt + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {Left,Down,Up,Right}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# split window in given direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p \~{west,south,north,east}

#
# focus
#

# cycle windows in current desktop
super + {_,shift + }Tab
	bspc node -f {next,prev}.local

# focus/move the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus or send to desktop
super + {_,shift + }{1-6}
	bspc {desktop -f,node -d} ^{1-6}

# change node layer
super + {q,a,z}}
	bspc node -l {above,normal,below}

